import Layout from '../layouts/Layout.astro';
---

<Layout title='Welcome to Astro.'>
	<div class='bg-dark'>
		<header class='bg-hero-pattern bg-cover bg-no-repeat
			h-screen flex flex-col'>
			<div class='mx-auto h-24 w-full max-w-7xl flex items-center text-white'>
				<div>
					<span class='logo-text text-3xl'>Room41</span>
				</div>
				<div class='flex flex-1 justify-center gap-16'>
					<a
						href=''
						class='hover:bg-gray-50 transition-colors duration-300 ease-in-out px-4 hover:text-dark rounded-lg py-2'
						>Nosotros</a
					>
					<a
						href=''
						class='hover:bg-gray-50 transition-colors duration-300 ease-in-out px-4 hover:text-dark rounded-lg py-2'
						>Eventos</a
					>
					<a
						href=''
						class='hover:bg-gray-50 transition-colors duration-300 ease-in-out px-4 hover:text-dark rounded-lg py-2'
						>Men√∫</a
					>
					<a
						href=''
						class='hover:bg-gray-50 transition-colors duration-300 ease-in-out px-4 hover:text-dark rounded-lg py-2'
						>Contacto</a
					>
				</div>
				<div>
					<a
						href=''
						class='bg-accent text-dark font-semibold px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors duration-300 ease-in-out'
						>Reservar</a
					>
				</div>
			</div>
			<div class='flex grow flex-col items-center justify-center p-24 text-white'>
				<div class='flex flex-col items-start'>
					<span class='line-before px-4 ml-[72px] text-accent uppercase font-semibold'>ROOM41 MADRID BAR-CAFE</span>
					<h1 class='logo-text text-7xl my-6'>Descubre nuestros eventos</h1>
				</div>
			</div>
			<a
				href=''
